---
// src/components/Button.astro
const { href, label, extraClasses = '' } = Astro.props;
---

<a
  href={href}
  class={`text-base text-white font-normal border-2 border-white px-4 py-2 inline-block leading-none transition-all hover:bg-white hover:text-black rounded ${extraClasses}`}
>
  {label}
</a>

<style>
  .black-button {
    background-color: black;
    color: white;
    border-color: black; /* Nessun bordo bianco */
  }

  .black-button:hover {
    background-color: white;
    color: black;
  }

  .cta-button {
    background-color: black;
    color: white; /* Mantieni il testo bianco */
    border: none; /* Rimuovi il bordo */
  }

  .cta-button:hover {
    background-color: #333; /* Colore in hover */
    color: white; /* Testo sempre bianco */
  }
</style>
