---
const { bookTitle, currentFullSlug } = Astro.props;
---

<nav class="breadcrumb">
  <a href="/books">Books</a>
  <span class="breadcrumb-separator"></span>
  <a href={`/books/${currentFullSlug.split('/')[1]}`}>{bookTitle || 'Book Title Not Found'}</a>
</nav>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    font-size: 1rem;
    color: #50b0ae;
    margin-bottom: 1rem;
    padding-left: 0.2rem; /* Stesso margin-left della navigation */
  }

  .breadcrumb a {
    color: #50b0ae;
    text-decoration: none;
    font-weight: bold;
  }

  .breadcrumb-separator {
    display: inline-block;
    width: 7px;
    height: 7px;
    border-right: 2px solid #aaa;
    border-bottom: 2px solid #aaa;
    margin-inline-start: 4px;
    margin-inline-end: 6px;
    transform: rotate(-45deg);
    vertical-align: middle;
  }

  @media (max-width: 768px) {
    .breadcrumb {
      padding-left: 0.2rem; /* Allineamento per mobile coerente con desktop */
    }
  }
</style>
