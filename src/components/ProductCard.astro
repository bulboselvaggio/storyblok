---
// src/components/ProductCard.astro
const { product } = Astro.props
---

<article class="column feature bg-gray-100 rounded">
  <a href={`/products/${product.slug}`}>
    <img
      class="object-cover object-center w-full lg:h-48 md:h-36 rounded"
      src={`${product.image.filename}/m/360x240`}
      alt={product.name}
    />
    <div class="p-4">
      <h1 class="text-2xl font-semibold lg:text-3xl">
        {product.name}
      </h1>
      <p class="leading-relaxed text-gray-700 my-4">
        ${product.price}
      </p>
      <p class="leading-relaxed text-gray-700 line-clamp-2">
        {product.description}
      </p>
      <a
        href={`/products/${product.slug}`}
        class="font-semibold text-blue-600 hover:underline"
        title="View Product"
      >
        View Product Â»
      </a>
    </div>
  </a>
</article>
