---
const { previousItem, nextItem } = Astro.props;
---

<style>
.navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 1.5rem 0;
  margin-top: 2rem;
}

.navigation-link {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: #50b0ae;
  font-size: 1.1rem;
  font-weight: bold;
}

.navigation-link span {
  margin: 0 0.5rem;
}

.navigation-link svg {
  width: 20px;
  height: 20px;
}

.navigation-left {
  justify-self: flex-start;
  margin-left: 0.2rem; /* Ridotto il margine sinistro */
}

.navigation-right {
  justify-self: flex-end;
  margin-right: 0.2rem; /* Aggiustato il margine destro */
  text-align: right;
}

.navigation-label {
  font-size: 0.9rem;
  color: #888;
}

.navigation-title {
  max-width: 20ch;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Allineamento del blocco Next a destra quando Prev Ã¨ assente */
.navigation.single-next {
  justify-content: flex-end;
}

.navigation.single-prev {
  justify-content: flex-start;
}


</style>


<div class={`navigation ${!previousItem && nextItem ? 'single-next' : ''} ${previousItem && !nextItem ? 'single-prev' : ''}`}>
  <!-- Articolo precedente -->
  {previousItem && (
    <div class="navigation-left">
      <a href={previousItem.url} class="navigation-link">
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="icon">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
        <div class="flex flex-col">
          <span class="navigation-label">Prev</span>
          <span class="navigation-title">{previousItem.name}</span>
        </div>
      </a>
    </div>
  )}

  <!-- Articolo successivo -->
  {nextItem && (
    <div class="navigation-right">
      <a href={nextItem.url} class="navigation-link">
        <div class="flex flex-col">
          <span class="navigation-label">Next</span>
          <span class="navigation-title">{nextItem.name}</span>
        </div>
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="icon">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  )}
</div>
